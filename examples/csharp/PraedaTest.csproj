<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <ItemGroup>
    <None Update="PraedaGenerator.cs" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <!-- Copy the native Praeda library to the output directory -->
  <Target Name="CopyNativeLibrary" AfterTargets="Build">
    <Copy SourceFiles="../../target/release/libpraeda.so" DestinationFolder="$(OutputPath)" ContinueOnError="true" />
  </Target>

</Project>
