#!/bin/bash
# Pre-commit hook: Run clippy and tests before committing

set -e

echo "ğŸ” Running clippy checks..."
cargo clippy --all-targets --all-features -- -D warnings

if [ $? -ne 0 ]; then
    echo "âŒ Clippy checks failed. Fix the warnings above before committing."
    exit 1
fi

echo "âœ… Clippy checks passed!"
echo ""
echo "ğŸ§ª Running tests..."
cargo test --lib --quiet

if [ $? -ne 0 ]; then
    echo "âŒ Tests failed. Fix the failing tests above before committing."
    exit 1
fi

echo "âœ… All tests passed!"
echo ""
echo "âœ¨ Pre-commit checks complete. Your code is ready to commit!"
